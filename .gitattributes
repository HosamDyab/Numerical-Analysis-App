# Auto detect text files and perform LF normalization
* text=auto

# Python files should use LF
*.py text eol=lf
*.pyw text eol=lf
*.pyi text eol=lf

# Shell scripts should use LF
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Text files should use LF
*.txt text eol=lf
*.md text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.rar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.class binary

# Documentation
docs/**/*.md text eol=lf
docs/**/*.txt text eol=lf
docs/**/*.pdf binary

# Tests
tests/**/*.py text eol=lf
tests/**/*.json text eol=lf

# Source code
src/**/*.py text eol=lf
src/**/*.pyw text eol=lf
src/**/*.pyi text eol=lf

# Configuration files
*.cfg text eol=lf
*.ini text eol=lf
*.toml text eol=lf
*.env text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf 